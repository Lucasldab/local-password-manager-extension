{
  "manifest_version": 2,
  "name": "Local Password Manager Extension",
  "version": "1.0.0",
  "description": "Connect your local password manager to Firefox for secure password management",
  
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Local Password Manager"
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "applications": {
    "gecko": {
      "id": "local-password-manager@example.com",
      "strict_min_version": "57.0"
    }
  }
}
